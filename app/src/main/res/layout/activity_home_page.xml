                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/foodName3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Cheese" />

                        <TextView
                            android:id="@+id/foodPrice3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="275"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/food3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/inc_button"
                        android:text="+"
                        android:textColor="@color/white" />

                </LinearLayout>


            </LinearLayout>

            <!--Food 4-->
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/food_container"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/foodImg4"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:src="@drawable/hawaiian_pizza" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/foodName4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Hawaiian" />

                        <TextView
                            android:id="@+id/foodPrice4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="325"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/food4"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/inc_button"
                        android:text="+"
                        android:textColor="@color/white" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <!-- 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <!--Food 5-->
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/food_container"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/foodImg5"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
